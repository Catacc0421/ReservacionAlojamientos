<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #9ef5aa;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.reservacionAlojamientos.controladores.IniciarSesionControlador">
   <children>
      <Label layoutX="50.0" layoutY="23.0" text="Inicie sesión para empezar a usar todos los beneficios">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <VBox layoutX="31.0" layoutY="51.0" prefHeight="122.0" prefWidth="438.0">
         <children>
            <GridPane prefHeight="166.0" prefWidth="438.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Correo electrónico:" />
                  <Label text="Contraseña" GridPane.rowIndex="1" />
                  <PasswordField fx:id="txtContrasena" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="txtEmail" GridPane.columnIndex="1" />
               </children>
            </GridPane>
         </children>
      </VBox>
      <ImageView fitHeight="82.0" fitWidth="93.0" layoutX="488.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/Book.png" />
         </image>
      </ImageView>
      <CheckBox fx:id="txtValidar" layoutX="31.0" layoutY="182.0" mnemonicParsing="false" text="Si eres administrador puedes dar clic aquí para iniciar sesión al panel de administrador" />
      <Button layoutX="68.0" layoutY="264.0" mnemonicParsing="false" onAction="#volver" style="-fx-background-color: #0edfc0;" text="Volver">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="buttonOlvidarContrasena" layoutX="359.0" layoutY="264.0" mnemonicParsing="false" onAction="#recuperarContrasena" style="-fx-background-color: #0edfc0;" text="Olvidé mi contraseña">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="buttonIniciarSesion" layoutX="191.0" layoutY="264.0" mnemonicParsing="false" onAction="#iniciarSesion" style="-fx-background-color: #0edfc0;" text="Iniciar sesion">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
